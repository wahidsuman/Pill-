{
  "projects": {
    "default": "pilltracker-android"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "appdistribution": {
    "app": "${{ secrets.FIREBASE_APP_ID }}",
    "groups": ["testers"],
    "releaseNotes": "Automated build from GitHub Actions"
  }
}